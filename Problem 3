#include <iostream>
using namespace std;

int main() 
{
    int n;
    std::cout<<"Input:"<<"\n";
    std::cin>>n;
    std::cout<<"Output:"<<"\n";
    for(int i = 1; i <= n; i++){
	        if(i % 2 == 0){
	            for(int j = i; j >= 1; j--){
	                std::cout<<j<<" ";
	            }
	            std::cout<<"\n";
	        }else{
    	        for(int j = 1; j <= i; j++){
    	            std::cout<<j<<" ";
    	        }
    	        std::cout<<"\n";
	        }
	    }
	    
	    //Second Half Printing
	    for(int i = n-1; i >= 1; i--){
	        if(i % 2 == 0){
	            for(int j = i; j >= 1; j--){
	                std::cout<<j<<" ";
	            }
	            std::cout<<"\n";
	        }else{
    	        for(int j = 1; j <= i; j++){
    	            std::cout<<j<<" ";
    	        }
    	        std::cout<<"\n";
	        }
	    }
    return 0;
}
